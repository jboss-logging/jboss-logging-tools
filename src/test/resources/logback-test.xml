<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{60} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.jboss.logging" level="DEBUG" />  

  <root level="ERROR">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>